
@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>WowPay-Demo</title>
	<link href="https://dev.pay.wowpay.io/assets/images/favicon.png" rel="shortcut icon">
	<link href="~/css/checkout.css" rel="stylesheet" />
</head>
<body>
	<form action="/payment/request" method="post">
		<div class="center-wrapper">
			<div class="content">
				<nav>
					<a href="#" class="menu">Menu</a>
					<h1 class="logo">Wowpay Demo</h1>
					<div class="icons">
						<i class="fas fa-search"></i>
						<i class="fas fa-shopping-bag"></i><span style="margin-left: 0.3rem;">1</span>
					</div>
				</nav>
				
				<div class="bag">
					<p class="bag-head"><span style="text-transform: uppercase">Your Bag</span> - 1 item</p>
				</div>
				<div class="bag-product">
					<div class="image">
						<img src="https://dev.pay.wowpay.io/assets/images/bag.png" class="product-image">
					</div>
					<div class="description">
						<p class="product-code small muted">Product code: SS022592000</p>
						<h1>Suunto D4i Novo</h1>
						<p>Sun</p>
						<p class="description-text">An easy-to-use dive computer with freedive mode and air integration.</p>
						<p style="margin-bottom: 0.5rem;">One Size</p>
						<h2>$825.00</h2>
					</div>
				</div>
				<div class="bag-total">
					<div class="subtotal">
						<p class="small">Subtotal:</p>
						<p class="small">$825.00</p>
					</div>
					<div class="delivery">
						<p class="small">
							Delivery (Standard - 2 working days):<br>
							<span class="change-delivery">Change delivery method</span>
						</p>
						<p class="small">Free</p>
					</div>
					<div class="total">
						<h3>Total:</h3>
						<h3>$825.00</h3>
					</div>
					<button class="btn-go-checkout" type="submit">
						<i class="fas fa-lock"></i>
						<span>Proceed to Payment</span>
					</button>
				</div>

			</div>
		</div>
		<div class="bg"></div>
	</form>
</body>
</html>
